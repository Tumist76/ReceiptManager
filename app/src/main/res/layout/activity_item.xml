<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/point_address"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/mainText"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:text="Ярче!" />

    <android.support.v7.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_below="@id/item_name"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_below="@id/item_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_sum"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/item_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="12.90 Р"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_quantity"
                />

            <TextView
                android:id="@+id/item_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="1"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_price"
                />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="12.90 Р"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/item_nds10_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_nds10"
                />

            <TextView
                android:id="@+id/item_nds10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="1"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/item_nds18_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_nds18" />

            <TextView
                android:id="@+id/item_nds18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="1"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_stats_card_view"
        android:layout_below="@id/item_card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >

            <TextView
                android:id="@+id/item_card_view_price_no_difference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цена не менялась"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                />
        <LinearLayout
            android:id="@+id/layout_stats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Минимальная цена"
                />

            <TextView
                android:id="@+id/item_card_view_min_price_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="28.05.2016" />

            <TextView
                android:id="@+id/item_card_view_min_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="54631,50 Р"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Максимальная цена" />

            <TextView
                android:id="@+id/item_card_view_max_price_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="28.05.2016" />

            <TextView
                android:id="@+id/item_card_view_max_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="54631,50 Р"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>

            <TextView
                android:id="@+id/item_card_view_purchases_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="57 покупок" />

            <TextView
                android:id="@+id/item_card_view_flavor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="на сумму" />

            <TextView
                android:id="@+id/item_card_view_purchases_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="54631,50 Р"
                android:textSize="24sp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>